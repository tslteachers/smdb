<h1>Actor #<%= @actor.id %></h1>

<p>
  <b>Name:</b>
  <%= @actor.name %>
</p>

<p>
  <b>Dob:</b>
  <%= @actor.dob %>
</p>

<p>
  <b>Bio:</b>
  <%= @actor.bio %>
</p>

<p>
  <b>Image:</b>
  <%= image_tag @actor.image_url %>
</p>

<p>
  <b>Filmography:</b>
  <ul>
    <% @actor.movies.each do |movie| %>
      <li><%= movie.title %></li>
    <% end %>
  </ul>
</p>


