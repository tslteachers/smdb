<h1>Movies</h1>

<p><%= link_to 'Add a New Movie', new_movie_url, { :class => "btn btn-primary", :title => "Add a new picture" }  %></p>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Image</th>
      <th>Director</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.title, movie_url(movie.id) %></td>
      <td><%= movie.year %></td>
      <td><%= movie.duration %></td>
      <td><%= truncate movie.description %></td>
      <td><%= image_tag movie.image_url, width: 100 %></td>
      <td><%= link_to movie.director.name, director_url(movie.director.id) %></td>

      <td><%= link_to 'Show', movie_url(movie), class: "btn" %></td>
      <td><%= link_to 'Edit', edit_movie_url(movie), class: "btn btn-warning" %></td>
      <td><%= link_to 'Destroy', movie_url(movie), class: "btn btn-danger",method: 'delete', data: { confirm: "Do you really want to delete this movie?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

